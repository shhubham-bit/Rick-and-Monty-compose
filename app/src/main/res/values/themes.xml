<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name = "Theme.RickAndMorty" parent = "android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/rick_morty_episode</item>
        <!--        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/ecco_logo_grey</item>-->
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">1200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.RickAndMorty</item>
    </style>
</resources>